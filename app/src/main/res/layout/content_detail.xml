<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:background="@color/itemBG"
    android:orientation="vertical"
    tools:context="appkg.kg.servicekg.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">


    <ImageView
        android:id="@+id/detail_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_keyboard_arrow_down" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dtln"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:text="LOW BACK TOP
Stars Leader"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="25dp"
                            android:layout_height="0.8dp"
                            android:layout_gravity="center"
                            android:layout_margin="6dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2140 сом"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.8dp"
                            android:layout_gravity="center"
                            android:layout_margin="6dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="+996708517908"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Описание"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="250dp"
                        android:layout_height="0.8dp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary" />


                    <TextView
                        android:id="@+id/tvDetailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/lorem_ipsum"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dtln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_favorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/button"
                android:scaleType="center"
                android:src="@drawable/ic_star_unactive" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="Позвонить" />

            <ImageButton
                android:id="@+id/share_advert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/button"
                android:scaleType="center"
                android:src="@drawable/ic_share" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
